{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@botfic/shared": [
                "./packages/shared/src"
            ],
            "@botfic/database": [
                "./packages/database/src"
            ],
            "@botfic/detection": [
                "./packages/detection/src"
            ],
            "@botfic/tracker": [
                "./packages/tracker/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "apps"
    ]
}